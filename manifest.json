{
    "manifest_version": 3,
    "name": "Smart Brief",
    "version": "1.0",
    "description": "AI-powered article summarizer using Mistral AI",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
